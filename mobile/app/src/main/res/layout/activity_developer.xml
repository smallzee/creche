<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/spacing_mxlarge">

            <TextView
                android:layout_width="match_parent"
                android:text="Project Topic"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/spacing_mlarge"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-light"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="Design and implementation of an android \n based student clearance system"
                android:textSize="@dimen/spacing_large"
                android:padding="@dimen/spacing_large"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />


            <TextView
                android:layout_width="match_parent"
                android:text="Student Information"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/spacing_mlarge"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/spacing_large"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

          <ImageView
              android:layout_width="200dp"
              android:layout_marginTop="@dimen/spacing_medium"
              android:layout_gravity="center_horizontal"
              android:src="@drawable/image"
              android:layout_marginBottom="@dimen/spacing_large"
              android:layout_height="200dp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Full Name : "
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/spacing_large"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:text="Matric Number : "
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/spacing_large"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:text="Department : Computer Science "
                android:layout_marginBottom="@dimen/spacing_medium"
                android:fontFamily="sans-serif-light"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/spacing_large"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Supervised By"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/spacing_mlarge"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/spacing_large"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>